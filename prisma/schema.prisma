// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Author {
  id     Int     @default(autoincrement()) @id
  name   String  @unique
  bio    String
  books  Book[]
}

model Book {
  id          Int         @default(autoincrement()) @id
  title       String      @unique
  date        DateTime
  author      Author      @relation(fields: [authorName], references: [name])
  authorName  String
  categories  Category[]  @relation(references: [name])
}

model Category {
  id    Int     @default(autoincrement()) @id
  name  String  @unique
  books Book[]
}
